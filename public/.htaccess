<IfModule mod_rewrite.c>
    RewriteEngine On

    # Allow direct access to existing files and directories.
    RewriteCond %{REQUEST_FILENAME} -f [OR]
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^ - [L]

    # Support extensionless PHP files (e.g. /status -> status.php).
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_FILENAME}\.php -f
    RewriteRule ^(.+?)/?$ $1.php [L,QSA]

    # Route everything else through the Restify front controller.
    RewriteRule ^ index.php [L,QSA]
</IfModule>

# Harden access to sensitive resources.
<FilesMatch "^(composer\.(json|lock)|package\.json|yarn\.lock|\.env(\..*)?|.*\.(log|ini|dist))$">
    Require all denied
</FilesMatch>

# Prevent directory browsing.
Options -Indexes

<IfModule mod_headers.c>
    Header always set X-Frame-Options "SAMEORIGIN"
    Header always set X-Content-Type-Options "nosniff"
    Header always set X-XSS-Protection "1; mode=block"
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
    Header always set Permissions-Policy "geolocation=(), microphone=(), camera=()"
</IfModule>
